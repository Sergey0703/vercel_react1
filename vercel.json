{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "/client/package.json", "use": "@now/static-build" },
    { "src": "/api/server.js", "use": "@now/node-server" }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "/api/server.js" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
